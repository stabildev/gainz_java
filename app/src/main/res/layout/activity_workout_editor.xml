<android.support.design.widget.CoordinatorLayout android:id="@+id/main_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycompany.gainz.Activities.WorkoutEditor">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white">

            <com.mycompany.gainz.Classes.EmptyRecyclerView
                android:id="@+id/workoutList"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/recycler_top_margin"/>

            <TextView android:id="@+id/workoutList_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/workoutList_empty"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/silver"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/editSet_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/edge_margin"
            android:paddingRight="@dimen/edge_margin"
            android:paddingTop="@dimen/content_margin"
            android:paddingBottom="@dimen/content_margin"

            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/editSet_arrowLeft"
                android:layout_width="35dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_left_black_48dp"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:onClick="onLeftButtonClick"
                android:tint="@color/icons"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/editSet_exerciseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_title_material"
                    android:textColor="@color/primary_text"
                    android:text="Exercise Name"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/editSet_setNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_body_1_material"
                    android:textColor="@color/secondary_text"
                    android:text="Set 3/5"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <ImageView
                android:id="@+id/editSet_arrowRight"
                android:layout_width="35dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chevron_right_black_48dp"
                android:background="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true"
                android:tint="@color/icons"
                android:onClick="onRightButtonClick"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <View
            android:id="@+id/editSet_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider"
            android:layout_marginLeft="@dimen/edge_margin"
            android:layout_marginRight="@dimen/edge_margin"/>

        <com.mycompany.gainz.Classes.WrapContentViewPager
            android:id="@+id/viewPager_editSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_timer_white_24dp"
        android:scaleType="center"
        android:background="@drawable/timer_fab"
        android:id="@+id/imageButton"
        android:layout_gravity="right|bottom"
        android:elevation="6dp"/>

</android.support.design.widget.CoordinatorLayout>